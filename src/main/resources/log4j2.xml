<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd] [HH:mm:ss}] %-5level %c{2}(%F:%L) [%t] - %msg%n"/>
        </Console>

        <RollingFile name="LogToRollingFile" filePattern="target/logs/University-%d{yyyy-MM-dd}.log"
                     immediateFlush="true">
            <PatternLayout>
                <pattern>[%d{yyyy-MM-dd] [HH:mm:ss}] %-5level %c{2}(%F:%L) [%t] - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <OnStartupTriggeringPolicy/>
            </Policies>
        </RollingFile>
    </appenders>
    <loggers>
        <root level="all" additivity="false">
            <appender-ref ref="Console"/>
            <appender-ref ref="LogToRollingFile"/>
        </root>
    </loggers>
</configuration>